$(function(){
    var subDatas = {
        oldPwd:null,
        newPwd:null,
        newPwdCon:null
    }
    function getUpdatePwd(){
        subDatas.oldPwd = $.trim($(".oldPwd").val());
        subDatas.newPwd = $.trim($(".newPwd").val());
        subDatas.newPwdCon = $.trim($(".newPwdCon").val());
        if(!subDatas.oldPwd){
            _z_.topAlert("请填写原密码");
            return false;
        }else if(!subDatas.newPwd){
            _z_.topAlert("请填写新密码");
            return false;
        }else if(!subDatas.newPwdCon){
            _z_.topAlert("请填写新密码");
            return false;
        }
        return true;
    }
    $(".submitChangePwd").click(function(){
        if(getUpdatePwd()){
            $.post(api.updatepwd,subDatas,function(datas){
                if(datas.httpCode==200){
                    location = "./index.html";
                    setTimeout(function(){
                        location = "./index.html";
                    },1500);
                }else{
                    _z_.topAlert(datas.msg);
                }
            })
        }
    })
})