$(function(){
    var pageNum = 1;
    var isloading = false;
    function getList(){
        if(isloading) return;
        isloading = true;
        ajax.post(api.fundsrecord,{pageNum:pageNum},function(datas){
            console.log(datas)
            if(datas.httpCode!==200){
                $(".chain-money").append(
                '<ul class="chain-ul">'+
                    '<li>'+
                    '<div class="fl cz">【充值】微信充值</div>'+
                '<div class="fr ddh">订单号：12458795463214789</div>'+
                '</li>'+
                '<li>'+
                '<div class="block fl">'+
                    '<span class="block-span bor_rau3 fl mk1">充</span>'+
                    '<span>50:00</span>'+
                '</div>'+
                '<div class="block fl">'+
                    '<span class="block-span bor_rau3 fl mk2">费</span>'+
                    '<span>1</span>'+
                    '</div>'+
                    '<div class="fr time">2017-03-21 21:52:02</div>'+
                '</li>'+
                '</ul>'
                )
            }else{
                _z_.topAlert(datas.msg);
            }
            isloading = false;
            pageNum++
        })
    };
    $(window).on("scroll",function(){
        var h = parseInt($(window).height());
        var top = $(window).scrollTop();
        if($(document).height()==h+top){
            getList()
        }
    })
    getList()
})
